<div class="display-characters">
  {{format-term termOne}}

  <span class="d-char">
    {{#if operator}}
      {{format-operator operator}}
    {{/if}}
  </span>

  {{format-term termOne}}

  <span class="d-char">
    {{#if isEqualVisible}}
      =
    {{/if}}
  </span>

  {{#if level}}
    <span class="d-char">L</span>
    <span class="d-char"></span>
    <span class="d-char">{{level}}</span>
  {{else if isError}}
    <span class="d-char">E</span>
    <span class="d-char">E</span>
    <span class="d-char">E</span>
  {{else}}
    {{#if blink}}
      <span class="blink">{{format-term answer}}</span>
    {{else}}
      {{format-term answer}}
    {{/if}}
  {{/if}}
</div>
